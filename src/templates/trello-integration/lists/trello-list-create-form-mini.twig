<div class="trello-list pt-2" id="trello-list-create">
    {#    Trello List Form    #}
    <div class="trello-create-card-form" id="trello-create-list-form">
        <div class="input-group mb-3">
            <input type="text-area" id="trello-create-list-input" class="form-control" placeholder="Enter a title for this list...">
        </div>
        <button type="button" class="btn btn-light d-inline-block" onclick="createTrelloList('{{ board.id }}','{{ formToken | raw }}')">Add List</button>
    </div>

    <div id="trello-create-list-loader" class="d-none justify-content-center">
        <div class="spinner-border " role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
    {#    Trello List Form -> END   #}
</div>